{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "dist/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ]
    },
    "types": ["node", "jest"],
    "allowJs": true,
    "noEmit": true
  }
}
